<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="puzzleleaf.tistory.com.teamclinic">
    <supports-screens android:smallScreens="true" android:normalScreens="true" android:largeScreens="true" android:xlargeScreens="true" android:anyDensity="true" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity android:name=".title"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Splash.Splash" android:screenOrientation="portrait"/>
        <activity android:name=".Review.Review" android:screenOrientation="portrait"/>
        <activity android:name=".Story.Story" android:screenOrientation="portrait"/>
        <activity android:name=".Story.first.chapter_first" android:screenOrientation="portrait"/>

        <activity android:name=".Unity.UnityPlayerActivity"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|fontScale"
            android:launchMode="singleTask"
            android:process=":unityplayer"
            android:screenOrientation="fullSensor">
        </activity>
        <activity android:name=".MainActivity"/>
    </application>

    <uses-permission android:name="android.permission.CAMERA" />


</manifest>